{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist",
    "target": "es2022",
    "module": "NodeNext",
    "types": ["node"]
  },
  "exclude": [
    "test",
    "*.config.js",
    "jest.config.ts",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.spec.js",
    "**/*.test.js"
  ],
  "include": ["**/*.ts", "**/*.js"]
}
